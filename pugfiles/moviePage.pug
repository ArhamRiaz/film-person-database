            </div>
            <div>
                <button>Search for Actor</button>
            </div>
            </form>
        </div>  

<div id="movie">
 
        h1  #{data.title}
        h3 Director(s):
        a(href="/director/" + data.director.trim()) #{data.director}
        h3 Writers: #{data.writer}
        h3 Release Date: #{data.year}
        h3 Runtime: #{data.runtime}
        h3 Actors: 
        each actor in actors 
            a(href="/actor/" + actor.trim()) #{actor}
            br


        h5 Available on the following Streaming Services: 
        each site in sites
            a(href="/site/" + site.trim()) #{site}
            br

 
